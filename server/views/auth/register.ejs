<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<main class="container">
    <!-- Message Area -->
    <% if(messages.length > 0) {%>
        <div class="alert alert-danger">
            <%= messages %>
        </div>
    <% } %>

    <div class="row">
        <div class="offset-md-4 col-md-4">
            <h1>Please Register</h1><br>
            <form method="POST" autocomplete="off">
                <fieldset class="form-group">
                    <label for="username" class="lefttext">Username: </label>
                    <input type="text" class="form-control"
                    name="username" placeholder="Enter username"
                    id="username" required autofocus>
                </fieldset>
                <br>
                <fieldset class="form-group">
                    <label for="password" class="lefttext">Password: </label>
                    <input type="password" class="form-control"
                    name="password" placeholder="Enter password"
                    id="password" required>
                </fieldset>
                <br>
                <fieldset class="form-group">
                    <label for="email" class="lefttext">Email: </label>
                    <input type="email" class="form-control"
                    name="email" placeholder="Enter Email Address"
                    id="email" required>
                </fieldset>
                <br>
                <fieldset class="form-group">
                    <label for="displayName" class="lefttext">Display Name: </label>
                    <input type="text" class="form-control"
                    name="displayName" placeholder="Enter Display Name"
                    id="displayName" required>
                </fieldset>
                <br>
                <fieldset class="form-group text-right">
                    <input type="submit" class="btn btn-success" value="Register">
                    <a href="/">
                        <input type="button" class="btn btn-danger" value="Cancel">
                    </a>
                </fieldset>

            </form>
        </div>
    </div>


</main>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>